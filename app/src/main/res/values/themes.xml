<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MetaMap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MetaMap.MaterialButton">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_text_size_small</item>
        <item name="cornerRadius">60dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.MetaMap.RoundedImageView_Large">
        <item name="riv_corner_radius">8dp</item>
        <item name="riv_border_width">1dp</item>
        <item name="riv_border_color">@color/grey_light</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Theme.MetaMap.RoundedImageView_Medium">
        <item name="riv_corner_radius">6dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="riv_border_width">1dp</item>
        <item name="riv_border_color">@color/grey_light</item>
    </style>

    <style name="Theme.MetaMap.RoundedImageView_Small">
        <item name="riv_corner_radius">4dp</item>
        <item name="riv_border_width">1dp</item>
        <item name="riv_border_color">@color/grey_light</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Theme.MetaMap.MaterialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/body_text_size_small</item>
        <item name="cornerRadius">60dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/blue</item>
        <item name="rippleColor">@color/blue_ripple</item>
    </style>

    <style name="Theme.MetaMap.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>