<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_side_parent"
    android:layout_marginEnd="@dimen/padding_side_parent"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_button_background"
        android:gravity="center_vertical"
        android:hint="@string/search_here"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_metamap_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="@id/edit_text"
        app:layout_constraintStart_toStartOf="@id/edit_text"
        app:layout_constraintTop_toTopOf="@id/edit_text" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="@id/edit_text"
        app:layout_constraintEnd_toEndOf="@id/edit_text"
        app:layout_constraintTop_toTopOf="@id/edit_text"
        app:riv_border_color="@color/grey_light"
        app:riv_border_width="1dp"
        app:riv_corner_radius="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>